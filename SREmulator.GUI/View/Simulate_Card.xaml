<Page x:Class="SREmulator.GUI.View.Simulate_Card"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SREmulator.GUI.View"
      xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="800"
      Title="光锥跃迁">

    <Grid Background="{DynamicResource SystemControlBackgroundChromeHighBrush}">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">
                <!-- 页面标题 -->
                <TextBlock Text="光锥跃迁" 
                           FontSize="20" 
                           FontWeight="SemiBold" 
                           Margin="0,10,0,20"/>

                <!-- 抽卡配置卡片 -->
                <Border Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}" 
                        Padding="20" 
                        Margin="0,0,0,20"
                        BorderThickness="1"
                        BorderBrush="{DynamicResource SystemControlBackgroundChromeMediumBrush}">
                    <StackPanel>
                        <TextBlock Text="抽卡配置" 
                                   FontSize="17" 
                                   FontWeight="SemiBold" 
                                   Margin="0,0,0,15"/>

                        <!-- 卡池版本选择 -->
                        <StackPanel Orientation="Horizontal" 
                                    Margin="0,0,0,15"
                                    VerticalAlignment="Center">
                            <TextBlock Text="卡池版本:" 
                                       VerticalAlignment="Center" 
                                       FontSize="15" 
                                       Width="100"/>
                            <ComboBox x:Name="cmbCardPoolVersion" 
Height="35"
FontSize="14"
Margin="10,0"
MinWidth="200"
SelectedIndex="0"
DisplayMemberPath="VersionName"
SelectedValuePath="VersionKey"/>
                        </StackPanel>

                        <!-- 星轨通票数量 -->
                        <StackPanel Orientation="Horizontal" 
                                    Margin="0,0,0,15"
                                    VerticalAlignment="Center">
                            <TextBlock Text="星轨通票:" 
                                       VerticalAlignment="Center" 
                                       FontSize="15" 
                                       Width="100"/>
                            <TextBox x:Name="txtStarRailPassCount" 
                                     Height="35"
                                     FontSize="14"
                                     Margin="10,0"
                                     MinWidth="200"
                                     Text="0"
                                     PreviewTextInput="TextBox_PreviewTextInput"
                                     DataObject.Pasting="TextBoxPasting"/>
                        </StackPanel>

                        <!-- 星琼数量 -->
                        <StackPanel Orientation="Horizontal" 
                                    Margin="0,0,0,15"
                                    VerticalAlignment="Center">
                            <TextBlock Text="星琼数量:" 
                                       VerticalAlignment="Center" 
                                       FontSize="15" 
                                       Width="100"/>
                            <TextBox x:Name="txtStellarJadeCount" 
                                     Height="35"
                                     FontSize="14"
                                     Margin="10,0"
                                     MinWidth="200"
                                     Text="0"
                                     PreviewTextInput="TextBox_PreviewTextInput"
                                     DataObject.Pasting="TextBoxPasting"/>
                        </StackPanel>

                        <!-- 无限抽卡资源 -->
                        <CheckBox x:Name="chkInfiniteResources" 
                                  Content="拥有无限抽卡资源" 
                                  FontSize="15"
                                  Margin="0,0,0,15"
                                  VerticalContentAlignment="Center" 
                                  HorizontalAlignment="Left">
                        </CheckBox>

                        <!-- 不计算抽卡副产物 -->
                        <CheckBox x:Name="chkIgnoreByproducts" 
                                  Content="不计算抽卡副产物" 
                                  FontSize="15"
                                  Margin="0,0,0,15"
                                  VerticalContentAlignment="Center" 
                                  HorizontalAlignment="Left">
                        </CheckBox>
                    </StackPanel>
                </Border>

                <!-- 预期结果卡片 -->
                <Border Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}" 
                        Padding="20" 
                        Margin="0,0,0,20"
                        BorderThickness="1"
                        BorderBrush="{DynamicResource SystemControlBackgroundChromeMediumBrush}">
                    <StackPanel>
                        <TextBlock Text="目标配置" 
                                   FontSize="17" 
                                   FontWeight="SemiBold" 
                                   Margin="0,0,0,15"/>

                        <!-- 抽取目标 -->
                        <StackPanel Orientation="Horizontal" 
                                    Margin="0,0,0,15"
                                    VerticalAlignment="Center">
                            <TextBlock Text="抽取目标:" 
                                       VerticalAlignment="Center" 
                                       FontSize="15" 
                                       Width="100"/>
                            <ComboBox x:Name="cmbTarget" 
                                      Height="35"
                                      FontSize="14"
                                      Margin="10,0"
                                      MinWidth="200"
                                      SelectedIndex="0">
                                <ComboBoxItem Content="指定光锥"/>

                            </ComboBox>
                        </StackPanel>

                        <!-- 预期抽取光锥叠影 -->
                        <StackPanel Orientation="Horizontal" 
                                    Margin="0,0,0,15"
                                    VerticalAlignment="Center">
                            <TextBlock Text="目标叠影:" 
                                       VerticalAlignment="Center" 
                                       FontSize="15" 
                                       Width="100"/>
                            <TextBox
          Height="35"
          FontSize="14"
          Margin="10,0"
          MinWidth="200"
          Text="0"
          PreviewTextInput="TextBox_PreviewTextInput"
          DataObject.Pasting="TextBoxPasting"/>

                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- 抽卡结果卡片 -->
                <Border Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}" 
                        Padding="20" 
                        Margin="0,0,0,20"
                        BorderThickness="1"
                        BorderBrush="{DynamicResource SystemControlBackgroundChromeMediumBrush}">
                    <StackPanel>
                        <TextBlock Text="抽卡结果" 
                                   FontSize="17" 
                                   FontWeight="SemiBold" 
                                   Margin="0,0,0,5"/>

                        <TextBlock Text="所有模拟结果均不准确，仅供参考" 
                                   FontSize="12" 
                                   FontWeight="Light"
                                   Margin="0,0,0,5"/>

                        <!-- 操作按钮 -->
                        <StackPanel Orientation="Horizontal">
                            <!--<Button x:Name="btnStatistics" 
                                    Content="统计抽卡结果" 
                                    Width="120" 
                                    Height="40" 
                                    FontSize="14"
                                    Background="#0078d4"
                                    Foreground="White"
                                    BorderThickness="0"
                                    HorizontalAlignment="Left"
                                    FontWeight="SemiBold"
                                    Margin="0,0,10,0">
                            </Button>-->

                            <Button x:Name="btnExportCSV" 
                                    Content="导出CSV" 
                                    Width="120" 
 Height="40" 
 FontSize="14"
  Style="{DynamicResource AccentButtonStyle}"
 HorizontalAlignment="Left"
 FontWeight="SemiBold"
 Margin="0,0,10,0">
                            </Button>


                            <Button x:Name="btnCalculateChance" 
                                    Content="计算抽取可能性" 
                                    Width="140" 
                                    Height="40" 
                                    FontSize="14"
                                    Style="{DynamicResource AccentButtonStyle}"
                      
                                    HorizontalAlignment="Left"
                                    FontWeight="SemiBold"
                                    Margin="0,0,10,0" >
                            </Button>

                            <Button x:Name="btnCalculate" 
                                    Content="计算所需抽数" 
                                    Width="140" 
                                    Height="40" 
                                    FontSize="14"
                                    Style="{DynamicResource AccentButtonStyle}"
                      
                                    HorizontalAlignment="Left"
                                    FontWeight="SemiBold"
                                    Margin="0,0,10,0" >
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
