<Page x:Class="SREmulator.GUI.View.Simulate_Card"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SREmulator.GUI.View"
      xmlns:properties="clr-namespace:SREmulator.GUI.Properties.Localization"
      xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
      mc:Ignorable="d" 
      d:DesignHeight="950" d:DesignWidth="800"
      Title="{x:Static properties:Localization.SimulateCard_Title}">

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">
                <!-- 页面标题 -->
                <TextBlock Text="{x:Static properties:Localization.SimulateCard_Title}" 
                           FontSize="20" 
                           FontWeight="SemiBold" 
                           Margin="0,10,0,20"/>

                <!-- 抽卡配置卡片 -->
                <Border Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}" 
                        Padding="20" 
                        Margin="0,0,0,20"
                       
                        BorderBrush="{DynamicResource SystemControlBackgroundChromeMediumBrush}">
                    <StackPanel>
                        <TextBlock Text="{x:Static properties:Localization.SimulateCard_Config_Title}" 
                                   FontSize="17" 
                                   FontWeight="SemiBold" 
                                   Margin="0,0,0,15"/>

                        <StackPanel Orientation="Horizontal" 
                                    Margin="0,0,0,15"
                                    VerticalAlignment="Center">
                            <TextBlock Text="{x:Static properties:Localization.SimulateCard_WarpName}" 
                                       VerticalAlignment="Center" 
                                       FontSize="15" 
                                       Width="100"/>
                            <ComboBox x:Name="cmbWarpName" 
                                      Height="35"
                                      FontSize="14"
                                      Margin="10,0"
                                      MinWidth="200"
                                      SelectedIndex="0">
                            </ComboBox>
                        </StackPanel>

                        <!-- 卡池版本选择 -->
                        <StackPanel Orientation="Horizontal" 
                                    Margin="0,0,0,15"
                                    VerticalAlignment="Center">
                            <TextBlock Text="{x:Static properties:Localization.SimulateCard_PoolVersion}" 
                                       VerticalAlignment="Center" 
                                       FontSize="15" 
                                       Width="100"/>
                            <ComboBox x:Name="cmbCardPoolVersion" 
Height="35"
FontSize="14"
Margin="10,0"
MinWidth="200"
SelectedIndex="0"
DisplayMemberPath="VersionName"
SelectedValuePath="VersionKey"/>
                        </StackPanel>

                        <!-- 星轨专票数量 -->
                        <StackPanel Orientation="Horizontal" 
                                    Margin="0,0,0,15"
                                    VerticalAlignment="Center">
                            <TextBlock Text="{x:Static properties:Localization.SimulateCard_StarRailPass}" 
                                       VerticalAlignment="Center" 
                                       FontSize="15" 
                                       Width="100"/>
                            <TextBox x:Name="txtStarRailPass" 
                                     Height="35"
                                     FontSize="14"
                                     Margin="10,0"
                                     MinWidth="200"
                                     Text="0"
                                     PreviewTextInput="TextBox_PreviewTextInput"
                                     DataObject.Pasting="TextBoxPasting"/>
                        </StackPanel>

                        <!-- 星琼数量 -->
                        <StackPanel Orientation="Horizontal" 
                                    Margin="0,0,0,15"
                                    VerticalAlignment="Center">
                            <TextBlock Text="{x:Static properties:Localization.SimulateCard_StellarJade}" 
                                       VerticalAlignment="Center" 
                                       FontSize="15" 
                                       Width="100"/>
                            <TextBox x:Name="txtStellarJade" 
                                     Height="35"
                                     FontSize="14"
                                     Margin="10,0"
                                     MinWidth="200"
                                     Text="0"
                                     PreviewTextInput="TextBox_PreviewTextInput"
                                     DataObject.Pasting="TextBoxPasting"/>
                        </StackPanel>

                        <!-- 无限抽卡资源 -->
                        <CheckBox x:Name="chkInfiniteResources" 
                                  Content="{x:Static properties:Localization.SimulateCard_InfiniteResources}" 
                                  FontSize="15"
                                  Margin="0,0,0,15"
                                  VerticalContentAlignment="Center" 
                                  HorizontalAlignment="Left"/>


                        <!--大保底存在-->                        
                        <CheckBox x:Name="chkguarantee" 
                                  Content="{x:Static properties:Localization.SimulateCard_Guarantee}" 
                                  FontSize="15"
                                  Margin="0,0,0,15"
                                  VerticalContentAlignment="Center" 
                                  HorizontalAlignment="Left">
                        </CheckBox>
                        <!-- 不计算副产物 -->
                        <CheckBox x:Name="chknoreward" 
            Content="{x:Static properties:Localization.SimulateCard_NoReward}" 
            FontSize="15"
            Margin="0,0,0,15"
            VerticalContentAlignment="Center" 
            HorizontalAlignment="Left">
                        </CheckBox>

                        <!-- 导出CSV -->
                        <CheckBox x:Name="chkExportCSV" 
Content="{x:Static properties:Localization.SimulateCard_ExportCSV}" 
FontSize="15"
Margin="0,0,0,15"
VerticalContentAlignment="Center" 
HorizontalAlignment="Left">
                        </CheckBox>
                        <!-- 计算平均抽数 -->
                        <CheckBox x:Name="chkCalculateAverage" 
Content="{x:Static properties:Localization.SimulateCard_CalculateAverage}" 
FontSize="15"
Margin="0,0,0,15"
VerticalContentAlignment="Center" 
HorizontalAlignment="Left">
                        </CheckBox>
                    </StackPanel>
                </Border>

                <!-- 预期结果卡片 -->
                <Border Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}" 
                        Padding="20" 
                        Margin="0,0,0,20"
                        
                        BorderBrush="{DynamicResource SystemControlBackgroundChromeMediumBrush}">
                    <StackPanel>
                        <TextBlock Text="{x:Static properties:Localization.SimulateCard_TargetConfig_Title}" 
                                   FontSize="17" 
                                   FontWeight="SemiBold" 
                                   Margin="0,0,0,15"/>

                        <!-- 抽取目标 -->
                        <StackPanel Orientation="Horizontal" 
                                    Margin="0,0,0,15"
                                    VerticalAlignment="Center">
                            <TextBlock Text="{x:Static properties:Localization.SimulateCard_Target}" 
                                       VerticalAlignment="Center" 
                                       FontSize="15" 
                                       Width="100"/>
                            <ComboBox x:Name="cmbTarget" 
                                      Height="35"
                                      FontSize="14"
                                      Margin="10,0"
                                      MinWidth="200"
                                      SelectedIndex="0"/>
                        </StackPanel>

                        <!-- 预期抽取光锥叠影 -->
                        <StackPanel Orientation="Horizontal" 
                                    Margin="0,0,0,15"
                                    VerticalAlignment="Center">
                            <TextBlock Text="{x:Static properties:Localization.SimulateCard_TargetCount}" 
                                       VerticalAlignment="Center" 
                                       FontSize="15" 
                                       Width="100"/>
                            <TextBox
          x:Name="cmbTargetCount" 
          Height="35"
          FontSize="14"
          Margin="10,0"
          MinWidth="200"
          Text="1"
          PreviewTextInput="TextBox_PreviewTextInput"
          DataObject.Pasting="TextBoxPasting"/>

                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- 抽卡结果卡片 -->
                <Border Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}" 
                        Padding="20" 
                        Margin="0,0,0,20"
                       
                        BorderBrush="{DynamicResource SystemControlBackgroundChromeMediumBrush}">
                    <StackPanel>
                        <TextBlock Text="{x:Static properties:Localization.SimulateCard_Result_Title}" 
                                   FontSize="17" 
                                   FontWeight="SemiBold" 
                                   Margin="0,0,0,5"/>

                        <TextBlock Text="{x:Static properties:Localization.SimulateCard_Result_Disclaimer}" 
                                   FontSize="12" 
                                   FontWeight="Light"
                                   Margin="0,0,0,5"/>

                        <!-- 操作按钮 -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <Button x:Name="btnCalculateChance" 
                                    Content="{x:Static properties:Localization.SimulateCard_CalculateChance}" 
                                    Width="150" 
                                    Height="40" 
                                    FontSize="14"
                                    Style="{DynamicResource AccentButtonStyle}"
                                    Click="BtnCalculateChance_Click"
                                    HorizontalAlignment="Left"
                                    FontWeight="SemiBold"
                                    Margin="0,0,10,0" >
                            </Button>

                        </StackPanel>
                        
                        <!-- 结果显示区域 -->
                        <Grid Margin="0,10,0,0">
                            <Border Background="{DynamicResource SystemControlBackgroundChromeHighBrush}" 
                                    
                                    BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                                    CornerRadius="5">
                                <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="5">
                                    <TextBlock x:Name="txtResult" 
                                               FontSize="14" 
                                               TextWrapping="Wrap" 
                                               Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}" 
                                               Margin="5"/>
                                </ScrollViewer>
                            </Border>
                        </Grid>
                        
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
