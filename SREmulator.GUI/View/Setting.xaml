<UserControl x:Class="SREmulator.GUI.View.Setting"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SREmulator.GUI.View"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid Background="{DynamicResource SystemControlBackgroundChromeHighBrush}">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">
                <!-- 页面标题 -->
                <TextBlock Text="设置" 
                           FontSize="20" 
                           FontWeight="SemiBold" 
                          
                           Margin="0,10,0,10"/>
                
                <!-- 更新设置卡片 -->
                <Border Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}" 
                        Padding="20" 
                        Margin="0,0,0,10"
                        BorderThickness="1"
                        BorderBrush="{DynamicResource SystemControlBackgroundChromeMediumBrush}">

                    <StackPanel>
                        <TextBlock Text="更新设置" 
                                   FontSize="17" 
                                   FontWeight="SemiBold" 
                                  
                                   Margin="0,0,0,15"/>
                        
                        <!-- 自动更新选项 -->
                        <CheckBox x:Name="chkAutoUpdate" 
                                  Content="自动更新检查" 
              
                                
           
                                  VerticalContentAlignment="Center" HorizontalAlignment="Left">

                        </CheckBox>
                        
                        <!-- 更新源选择 -->
                        <StackPanel Orientation="Horizontal" 
                                    Margin="0,20,0,10"
                                    VerticalAlignment="Center">
                            <TextBlock Text="更新下载源:" 
                                       VerticalAlignment="Center" 
                                       FontSize="15" 
                                     
                                       Width="auto"/>
                            <ComboBox x:Name="cmbUpdateSource" 
                                      Height="35"
                                      FontSize="14"
                                      Margin="10,0"
                                      SelectedIndex="0">
                                <ComboBoxItem Content="Github"/>
                                <ComboBoxItem Content="Gitcode"/>
                                
                            </ComboBox>
                        </StackPanel>
                        
                     
                        
                        <!-- 保存按钮 -->
                        <Button x:Name="btnSave" 
                                Content="保存设置" 
                                Width="120" 
                                Height="40" 
                                FontSize="15"
  Style="{DynamicResource AccentButtonStyle}"
                                HorizontalAlignment="Left"
                                FontWeight="SemiBold"
                                Margin="0,20,0,0">
                        </Button>
                        
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
