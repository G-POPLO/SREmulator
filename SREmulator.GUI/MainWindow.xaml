<Window x:Class="SREmulator.GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SREmulator.GUI"
        mc:Ignorable="d"
        xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
        ui:WindowHelper.SystemBackdropType="Mica"
        ui:WindowHelper.UseModernWindowStyle="True"
        Title="崩铁抽卡模拟" Height="600" Width="800">
    <Grid>
        <ui:NavigationView x:Name="nvSample" 
                          IsTabStop="False" 
                          PaneDisplayMode="Top"
                          SelectionChanged="NavigationView_SelectionChanged"
                          IsSettingsVisible="False"  
    IsBackButtonVisible="Collapsed"
    IsBackEnabled="False">
            <ui:NavigationView.MenuItems>
                <ui:NavigationViewItem Content="角色模拟" Tag="Simulate_Chara" />
                <ui:NavigationViewItem Content="光锥模拟" Tag="Simulate_Card" />
                <ui:NavigationViewItem Content="设置" Tag="Setting" />
                <ui:NavigationViewItem Content="关于" Tag="About" />
            </ui:NavigationView.MenuItems>
            <ui:Frame x:Name="contentFrame" />
        </ui:NavigationView>
    </Grid>
</Window>
